<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.sky.hyh.customviewsamples.customview.coordinatelayout.TabLayoutContainer
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            >
        </com.sky.hyh.customviewsamples.customview.coordinatelayout.TabLayoutContainer>

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            app:tabMode="scrollable"
            app:tabBackground="@color/transparent"
            app:tabIndicatorColor="#FFFC48"
            app:tabIndicatorHeight="3dp"
            app:tabSelectedTextColor="@color/pure_black"
            app:tabTextAppearance="@style/MyTabLayoutTextAppearanceInverse"/>

</merge>