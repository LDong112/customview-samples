<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

    <TextView
        android:id="@+id/tv_tip1"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="分段显示不同字体，颜色，大小的文字"/>

    <TextView
        android:id="@+id/tv_show1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_tip1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_tip2"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_show1"
        android:layout_centerHorizontal="true"
        android:text="给不同分段文字设置间距"/>

    <TextView
        android:id="@+id/tv_show2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_tip2"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_tip3"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_show2"
        android:layout_centerHorizontal="true"
        android:text="居中显示表情文字"/>

    <TextView
        android:id="@+id/tv_show3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_tip3"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>